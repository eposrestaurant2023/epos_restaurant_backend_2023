<MudItem>
    <MudSelect T="string" Dense="true" Label="@label" MultiSelection="true" SelectedValues="selected_values" SelectedValuesChanged="OnSelectedValues">
        @foreach (var option in select_options)
        {
            <MudSelectItem T="string" Value="@option">@option</MudSelectItem>
        }
    </MudSelect>
</MudItem>
@code {
    [Parameter] public string label { get; set; }
    [Parameter] public HashSet<string> selected_values { get; set; } = new HashSet<string>();
    [Parameter] public EventCallback<HashSet<string>> selected_valuesChanged { get; set; }

    [Parameter] public List<string> select_options { get; set; } = new List<string>();

    void OnSelectedValues(HashSet<string> selected)
    {
        selected_values = selected;
        selected_valuesChanged.InvokeAsync(selected);
    }

}

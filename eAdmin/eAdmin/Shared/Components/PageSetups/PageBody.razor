
<div class="page_body @class_name uk-position-relative">
    @if (!is_loading)
    {
        @ChildContent
    }
</div>

@code{
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string class_name { get; set; } 
    [Parameter] public bool is_loading { get; set; } 
}
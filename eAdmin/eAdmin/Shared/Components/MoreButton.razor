@inject IStringLocalizer<Resource> lang
@if (isVisible)
{
    <MudButtonGroup Color="MudBlazor.Color.Primary" Variant="Variant.Text">
        @if (!is_loading)
        {
            <MudMenu Icon="@Icons.Material.Filled.MoreVert" Direction="Direction.Bottom" OffsetY="true" Class="@("Cus_Drowdown" + ClassName)">
                @ChildContent
            </MudMenu>
       
        }
     </MudButtonGroup>
}
    @code{

        [Parameter] public RenderFragment ChildContent { get; set; }
        [Parameter] public string ClassName { get; set; } = "correct-location-dropdown";
        [Parameter] public bool is_loading { get; set; }
        [Parameter] public bool isVisible { get; set; } = true;
    }

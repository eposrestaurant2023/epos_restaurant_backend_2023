@if (roles == "")
{
    <MudNavGroup Title="@parent_menu_text" Icon="@icon" HideExpandIcon="false">
        @ChildContent
     </MudNavGroup>

    }
    else
    {
        <AuthorizeView Roles="@roles">
            <MudNavGroup Title="@parent_menu_text" Icon="@icon" HideExpandIcon="false">
                @ChildContent
            </MudNavGroup>
        </AuthorizeView>
    }


@code{

    [Parameter] public string tool_tip { get; set; } = "";
    [Parameter] public string parent_menu_text { get; set; } = "";

    [Parameter] public string icon { get; set; } = "";
    [Parameter] public string roles { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }

}

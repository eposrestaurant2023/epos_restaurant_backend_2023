@if (is_visible)
{
    if (is_loading)
    {
      <label class="uk-label inactive"> <Spinner /></label>
    }
    else
    {


        if (roles == "")
        {
<span class="uk-label inactive @ClassName" @onclick="@OnClick"><Icon icon="@IconName" is_visible="@(!string.IsNullOrEmpty(IconName))" />@text </span>
        }
        else
        {
            <AuthorizeView Roles="@roles">
                <Authorized>
                    <span class="uk-label inactive @ClassName" @onclick="@OnClick"><Icon icon="@IconName" is_visible="@(!string.IsNullOrEmpty(IconName))" />@lang[text]</span>
                </Authorized>
                <NotAuthorized>
                    <span class="uk-label inactive @ClassName"><Icon icon="@IconName" is_visible="@(!string.IsNullOrEmpty(IconName))" />@lang[text] </span>
                </NotAuthorized>
            </AuthorizeView>
        }
    }

}


@code
{
    [Parameter] public bool is_visible { get; set; } = true;
    [Parameter] public bool is_loading { get; set; }
    [Parameter] public string roles { get; set; } = "";
    [Parameter] public string ClassName { get; set; } = "";
    [Parameter] public string IconName { get; set; } = "";
    [Parameter] public string text { get; set; } = "Inactive";

    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

}

@if (is_visible)
{
    <label class="uk-label label-inventory text-center @ClassName" style="background:@Background;color:@Color">@Text</label>
}

@code{
    [Parameter] public bool is_visible { get; set; } = true;
    [Parameter] public string ClassName { get; set; }
    [Parameter] public string Background { get; set; } = "#b6e0d6";
    [Parameter] public string Color { get; set; } = "#000";
    [Parameter] public string Text { get; set; } = "Ingredient"; 

}
@inject IStringLocalizer<Resource> lang
@if (is_visible)
{
    <label class="uk-label uk-label-danger text-center"><Icon icon="@IconName" is_visible="@(!string.IsNullOrEmpty(IconName))"/>@lang["Deleted"]</label>
}

@code{
    [Parameter] public bool is_visible { get; set; }
    [Parameter] public string IconName { get; set; }
}
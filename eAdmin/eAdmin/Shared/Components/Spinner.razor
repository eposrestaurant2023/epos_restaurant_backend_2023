@if (is_spinning)
{
    if (is_template_spinning)
    {
    <div class="template-spinning">
        <span uk-spinner="ratio: @ratio"></span>
    </div>
    }
    else
    {
    <span uk-spinner="ratio: @ratio"></span>
    }
    
}

@code{
    [Parameter] public string ratio { get; set; } = "0.6";
    [Parameter] public bool is_spinning { get; set; } = true;
    [Parameter] public bool is_template_spinning { get; set; } = false;
}
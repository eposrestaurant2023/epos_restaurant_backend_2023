
<MatAccordion>
    <MatExpansionPanel>
        <MatBlazor.MatExpansionPanelSummary>
            <MatExpansionPanelHeader>
                @Header
            </MatExpansionPanelHeader>
        </MatBlazor.MatExpansionPanelSummary>
        <MatExpansionPanelDetails>
            @Content
        </MatExpansionPanelDetails>
    </MatExpansionPanel>

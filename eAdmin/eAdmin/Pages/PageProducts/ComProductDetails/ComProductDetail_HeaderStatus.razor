@inject IStringLocalizer<Resource> lang
@if (model != null) {
<Label is_visible="@(model.is_ingredient_product && is_ingredient)" Background="#b6e0d6" Color="#000" Text="@lang["Ingredient"]"/>
<Label is_visible="@(model.is_menu_product && is_menu_product)" Background="#cbb087" Text="@lang["Menu Product"]"/>
<Label is_visible="@model.is_inventory_product" Text="@lang["Inventory"]"/>
<LabelActive is_visible="@(!model.is_deleted && model.status)" is_loading="@model.is_change_status" />
<LabelInActive is_visible="@(!model.is_deleted && !model.status)" is_loading="@model.is_change_status" />
<LabelDeleted is_visible="@model.is_deleted" />
}
@code {
    [Parameter] public ProductModel model { get; set; }
    [Parameter] public bool is_ingredient { get; set; } = true;
    [Parameter] public bool is_menu_product { get; set; } = true;
}

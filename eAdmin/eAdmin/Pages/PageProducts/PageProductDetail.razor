@page "/product/{id:int}"
<Loading is_loading="@is_loading"/>
@if (!is_loading)
{
    <ComProductDetail id="@id" />
}


@code{
    [Parameter] public int id { get; set; }
    bool is_loading;

    protected override async Task OnParametersSetAsync()
    {
        is_loading = true;
        await Task.Delay(250);
        is_loading = false;
    }
}
@page "/purchaseorder"
@inherits PagePurchaseOrderBase
<Loading is_loading="@(is_loading || is_loading_data)" />

@{
    RenderFragment HeaderTemplate(string field_name, string display_name, string ClassName = "") =>
    @<Th OnClick="@(async () => await OrderBy(field_name))" OrderBy="@(state.pager.order_by == field_name)" OrderByType="@state.pager.order_by_type" ClassName="@($"cp {ClassName}")"> @display_name</Th>;
}

@if (!is_loading)
{
    <Title Value="Purchase Order"></Title>
    <PageContainer roles="@gv.GetRole("purchase_order_management")">
        <PageHeader>
            <HeaderLeft>
                <PageTitle>
                    <HeaderTemplate>
                        @state.page_title
                    </HeaderTemplate>
                    <FilterTemplate>
                        <PageFilter title="Status">
                            <ModuleView module_views="@gv.GetModuleView("page_purchase_order")" OnClick="@ViewClick" />
                        </PageFilter>
                    </FilterTemplate>
                </PageTitle>
            </HeaderLeft>
            <HeaderRight>
                <AddButton roles="@gv.GetRole("purchase_order_add")" url="purchaseorder/new">New</AddButton>
                <RefreshButton OnClick="@(async()=>await LoadData())" />
                <ComSearch place_holder="@GetFilterValue2(state.filters, "keyword","")" KeywordChanged="@OnSearch" show_advance_filter="true" OnFillterClick="@FilterClick">
                    <FilterDateRange @bind-dates="@state.date_range" />
                    <div class="uk-form-controls" style="margin-bottom: 10px;">
                        <label sclass="uk-form-label">Vendor</label>
                        <VendorTypeahead @bind-vendor="@state.vendor" />
                    </div>
                    <SelectBusinessBranchMutiple selected_business="@state.multi_select_id_1" selected_businessChanged="@((val)=> { state.multi_select_id_1 = val;state.multi_select_id_2= null;  } )" business_id="@((val)=>state.multi_select_value_1=val)" />
                    <SelectStockLocationMultiple business_branch_ids="@state.multi_select_value_1" @bind-selected_stock_location="@state.multi_select_id_2" stock_location_id="@((val)=>state.multi_select_value_2=val)" />
                </ComSearch>
            </HeaderRight>
        </PageHeader>
        <PageBody>
            <FilterInfo filters="@state.filters" OnRemoveFilterClick="@RemoveFilter" OnRemoveAllFilterClick="@RemoveAllFilter" />
            @ControllerApi
            <Com is_visible="@(models != null)">
                <Table Items="@models"
                       PerPage="@state.pager.per_page"
                       TotalItem="@TotalRecord"
                       CurrentPage="@state.pager.current_page"
                       OnPagerChange="@SelectChange"
                       OnPageChange="@ChangePager"
                       isLoading="@is_loading_data"
                       ShowPager="true"
                       ShowCounter="true"
                       ClassName="uk-table-small uk-table-striped uk-table-hover"
                       ScrollClass="uk-overflow-auto"
                       EmptyText="There is no record.">
                    <TableHeader>
                        @HeaderTemplate("purchase_date", "PO Date", "uk-text-center")
                        @HeaderTemplate("document_number", "Document#", "uk-text-center")
                        @HeaderTemplate("referance_number", "Referance#", "uk-text-center")
                        @HeaderTemplate("vendor/vendor_name", "Vendor", "col-auto") 
                        @HeaderTemplate("stock_location/stock_location_name", "Stock Location (Business Branch)")
                        <ThRight>Total Amount</ThRight>
                        <ThRight>Paid Amount</ThRight>
                        <ThRight>Balance</ThRight>
                        <ThCenter>Status</ThCenter>
                        <th class="uk-width-auto"></th>
                    </TableHeader>
                    <RowTemplate Context="p">
                        <TdCenter>@p.purchase_date.ToString(gv.date_format)</TdCenter>
                        <TdCenter>
                            <ComAuthorize roles="@gv.GetRole("purchase_order_management")" url="@($"purchaseorder/{p.id}")">
                                @p.document_number
                            </ComAuthorize>
                        </TdCenter>
                        <TdCenter>@p.reference_number</TdCenter>
                        <td>
                            <ComAuthorize roles="@gv.GetRole("vendor_view")" url="@($"vendor/{p.vendor_id}")">
                                <ComVendorInfo vendor="p.vendor" />
                            </ComAuthorize>
                        </td> 
                        <td>
                            @p.stock_location?.stock_location_name (@p.business_branch?.business_branch_name_en)
                        </td>

                        <TdRight>
                            @p.total_amount.ToString(gv.main_currency_format)
                        </TdRight>
                        <TdRight>
                            @p.paid_amount.ToString(gv.main_currency_format)
                        </TdRight>
                        <TdRight>
                            @p.balance.ToString(gv.main_currency_format)
                        </TdRight>
                        <TdRight>
                            <ComPurchaseOrderStatus po="@p" />
                            <LabelDeleted is_visible="@(p.is_deleted)" />
                        </TdRight>
                        <TdActions is_loading="@p.is_loading">
                            <TableActionItem roles="@gv.GetRole("purchase_order_management")" icon="visibility" url="@($"purchaseorder/{p.id}")">View</TableActionItem>
                            <TableActionItem roles="@gv.GetRole("purchase_order_edit")" icon="edit" is_visible="@(p.can_edit && !p.is_fulfilled)" url="@($"purchaseorder/edit/{p.id}")">Edit</TableActionItem>
                            <TableActionItem roles="@gv.GetRole("purchase_order_delete")" icon="delete" is_visible="@((!p.is_deleted && !p.is_paid) && (!p.is_partially_paid && !p.is_fulfilled))" OnClick="@(() => OnDelete(p))">Delete</TableActionItem>
                        </TdActions>
                    </RowTemplate>
                </Table>
            </Com>
        </PageBody>
    </PageContainer>
}
@inject IHttpService http;
@inject NavigationManager nav;
@inject IStringLocalizer<Resource> lang
<div uk-grid class="uk-grid-small">
    <div class="uk-width uk-margin-remove-top">
        @if (po.vendor != null)
        {
            <div class="sub_title font-sm">@lang["Vendor"]</div>
            <div>
                <div class="uk-flex">
                    <div style="margin-right:4px;">
                        <Image ImageUrl="@http.ImageUrl(po.vendor?.photo)" PopupImageUrl="@http.ImageUrl(po.vendor?.photo)" IsLightBox="true" IsBackgroundImage="true" Width="40px" Height="40px" />
                        <Spacing Number="5" />
                    </div>
                    <div style="margin-right:4px;">
                        <div>
                            <ComAuthorize roles="@gv.GetRole("vendor_view")" OnClick="@(()=>nav.NavigateTo($"vendor/{po.vendor_id}"))"><Icon icon="person" />@po.vendor?.vendor_display_name</ComAuthorize>
                            <LabelInActive is_visible="@(!po.vendor.status && !po.vendor.is_deleted)" />
                            <LabelActive is_visible="@(po.vendor.status && !po.vendor.is_deleted)" />
                            <LabelDeleted is_visible="@po.vendor.is_deleted" />
                        </div>

                        <Com is_visible="po.vendor?.office_phone !=null && po.vendor?.mobile_phone !=null">
                            <div>
                                <Icon icon="phone" />
                                <Com is_visible="po.vendor?.office_phone !=null">
                                    @po.vendor?.office_phone
                                </Com>
                                <Com is_visible="po.vendor?.mobile_phone !=null">
                                    / @po.vendor?.mobile_phone
                                </Com>
                            </div>
                        </Com>
                        <Com is_visible="po.vendor?.address != null">
                            <div><Icon icon="home" />@po.vendor?.address</div>
                        </Com>
                    </div>

                </div>
            </div>
            <br />
        }

    </div>
</div>




@code {
    [Parameter] public PurchaseOrderModel po { get; set; }
    [CascadingParameter] public GlobalVariableModel gv { get; set; }
}

@inject IStringLocalizer<Resource> lang
<UIGridCenter>
    <UISummaryBox Title="@lang["Ingredient Product Information"]"  ShowImage="true" ImageUrl="@model.photo">
        <ContentLeft>
            <table>
                <tr>
                    <th>@lang["Code"]</th>
                    <td>@model.product_code</td>
                </tr>
                <tr>
                    <th>@lang["Name En"]</th>
                    <td>@model.product_name_en</td>
                </tr>
                <tr>
                    <th>@lang["Name Kh"]</th>
                    <td>@model.product_name_kh</td>
                </tr>
                <tr>
                    <th>@lang["Category"]</th>
                    <td>@model.product_category?.product_category_en</td>
                </tr>                
            </table>
        </ContentLeft>
        <ContentRight>
            <table>
                <tr>
                    <th>@lang["Cost"]</th>
                    <td>@model.cost.ToString(gv.currency_format)</td>
                </tr>
                <tr>
                    <td>@lang["Vendor"]</td>
                    <td>@model.vendor?.vendor_display_name</td>
                </tr>
                <tr>
                    <th>@lang["Open Product"]</th>
                    <td><ComInputCheckBox label="" is_read_only="true" value="@model.is_open_product" /></td>
                </tr>
                <tr>
                    <th>@lang["Allow Discount"]</th>
                    <td><ComInputCheckBox label="" is_read_only="true" value="@model.is_allow_discount" /></td>
                </tr>
                <tr>
                    <th>@lang["Allow Free"]</th>
                    <td><ComInputCheckBox label="" is_read_only="true" value="@model.is_allow_free" /></td>
                </tr>
            </table>
        </ContentRight>

    </UISummaryBox>
    <UIContainerBox Title="@lang["Note"]" is_visible="@(!string.IsNullOrEmpty(model.note))">
        <div class="area-text">
        @model.note
        </div>
    </UIContainerBox>
    <Com is_visible="@model.is_inventory_product">
        <Spacing Number="10"/>
        <ComProductDetail_InventoryInformation product_id="@model.id"/>
    </Com>
</UIGridCenter>

@code {
    [Parameter] public ProductModel model { get; set; }
    [CascadingParameter] GlobalVariableModel gv { get; set; }
}

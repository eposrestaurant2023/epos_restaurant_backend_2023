@inject IStringLocalizer<Resource> lang
<MudTabs PanelClass="pa-6">
    <MudTabPanel Text="@lang["Products"]">
        <ComIngredientProductDetail_AssociationProducts ingredient_id="@ingredient_id" />

    </MudTabPanel>
    <MudTabPanel OnClick="@(()=>show_association_modifiers = true)" Text="@lang["Modifiers"]">
        @if (show_association_modifiers)
        {
            <ComIngredientProductDetail_AssociationModifiers ingredient_id="@ingredient_id" />
        }
    </MudTabPanel>
</MudTabs>
@code {
    [Parameter] public int ingredient_id { get; set; }
    bool show_association_modifiers = false;

}

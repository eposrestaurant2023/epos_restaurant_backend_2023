                        <Icon icon="upload" />
                        <span class="title">@lang["Production Products"]</span>
                    </h3>
                    <Spacing Number="10" />
                    <ComProductionInformation @bind-model="@model" @bind-model:event="modelChanged" />
                    <hr />
                    <Spacing Number="10" />

@inject IStringLocalizer<Resource> lang
@inject IHttpService http;
<ComPanel Title="@(lang["Daily Sale Revenue"])">


    @if (is_loading)
    {
        <Spinner />
    }
    else
    {
        @if (data != null && chart != null)
        {
            <ComChart chart_data="chart" chart_type="ApexCharts.ChartType.Bar" />
        }
    }

</ComPanel>
@code{
    [CascadingParameter] public GlobalVariableModel gv { get; set; }
    [Parameter] public string business_branch_id { get; set; }
    bool is_loading;
    List<DailySaleRevenueModel> data = new List<DailySaleRevenueModel>();
    List<ApexChartModel> chart = new List<ApexChartModel>();
    List<DailySaleRevenueModel> temp = new List<DailySaleRevenueModel>();
    protected override async Task OnInitializedAsync()
    {
        is_loading = true;
        var resp = await http.ApiPost("GetData", new FilterModel() { procedure_name = "sp_get_dashboard_daily_sale_revenue_json", procedure_parameter = $"'{business_branch_id}'" });
        if (resp.IsSuccess)
        {
            data = JsonSerializer.Deserialize<List<DailySaleRevenueModel>>(resp.Content.ToString());
            SetBarchartData();
        }
        is_loading = false;
    }


    void SetBarchartData()
    {
       

        if (data != null)
        {
            chart = new List<ApexChartModel>();

            temp = data.Select(r => new DailySaleRevenueModel()
            {
                business_branch_id = r.business_branch_id,
                color = r.color,
                day = r.day,
                total_amount = r.total_amount,
                business_branch_name = r.business_branch_name,
            })
                          .GroupBy(p => new { p.business_branch_id })
                          .Select(g => g.FirstOrDefault())
                          .ToList();
            chart = new List<ApexChartModel>();
            foreach (var d in temp)
            {
                List<ApexChartDataModel> a = data.Where(r => r.business_branch_id == d.business_branch_id).Select(r => new ApexChartDataModel() { label = r.day.ToString("00"), value = Convert.ToDecimal(r.total_amount.ToString("0.########")) }).ToList();
                chart.Add(new ApexChartModel()
                {
                    color = d.color,
                    title = d.business_branch_name,
                    data = a
                });
            }
        }
    }





    class DailySaleRevenueModel
    {
        public int day { get; set; }
        public string business_branch_id { get; set; }
        public string business_branch_name { get; set; }
        public string color { get; set; }
        public decimal total_amount { get; set; }

    }

}
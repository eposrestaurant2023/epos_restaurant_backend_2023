@inject IStringLocalizer<Resource> lang
@if (sale.is_deleted)
{
    <div class="ribbon ribbon-left"><span class="uk-label-danger">@lang["Deleted"]</span></div>
}
else
{

    if (sale.is_paid)
    {
        <div class="ribbon ribbon-left"><span class="paid">@lang["Paid"]</span></div>
    }
    else if (sale.is_paid == false && (sale.total_amount > 0 && sale.paid_amount == 0))
    {
        <div class="ribbon ribbon-left"><span class="unpaid">@lang["Unpaid"]</span></div>
    }
    else if (sale.is_partially_paid)
    {
        <div class="ribbon ribbon-left"><span class="partially-paid">@lang["Partially Paid"]</span></div>
    }
}
@code{
    [Parameter] public SaleModel sale { get; set; }
}
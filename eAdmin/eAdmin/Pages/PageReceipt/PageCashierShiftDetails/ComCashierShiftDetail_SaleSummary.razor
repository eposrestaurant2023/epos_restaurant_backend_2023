@inject IStringLocalizer<Resource> lang
<UIGridCenter>
    <UIContainerBox Title="@lang["Sale Summary"]">
        <ListTable ClassWidth="uk-width-1-1">
            @foreach (var t in models.Where(r => r.group_name == "Sale Summary").ToList())
            {
                <ListTableItem ItemTitle="@t.title" IsBetweenValue="true">@t.value</ListTableItem>
            }
        </ListTable>
    </UIContainerBox>
</UIGridCenter>
@code {
    [Parameter] public List<CloseCashierShiftSummaryModel> models { get; set; }
}

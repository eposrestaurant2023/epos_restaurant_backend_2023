<MudPaper Elevation="25" Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
<MudIcon Icon="@Icon" Color="@color" Class="mx-4" Size="Size.Large"></MudIcon>
    <div>
           <MudHidden Breakpoint="Breakpoint.SmAndDown">
              <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">@Title</MudText>
          </MudHidden>
         <MudHidden Breakpoint="Breakpoint.MdAndUp">
           <MudText Typo="Typo.subtitle2" Class="mud-text-secondary mb-n1">@Title</MudText>
         </MudHidden>
         <MudText Typo="Typo.h5">@Value</MudText>
    </div>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public MudBlazor.Color color {get;set;}
}

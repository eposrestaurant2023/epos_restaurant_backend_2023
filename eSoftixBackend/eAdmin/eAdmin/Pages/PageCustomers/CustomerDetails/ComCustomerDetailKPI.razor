<MudItem xs="12" lg="4">
   
    
        @if (is_loading)
        {
            <MudSkeleton SkeletonType="SkeletonType.Rectangle"  Height="100px" />
        }else
        {
            <ComDashboardKPI Title="All Project" color="@MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.Layers" Value="@customer.total_project.ToString()"/>
        }
</MudItem>
<MudItem xs="12" lg="4">
  
    @if (is_loading)
    {
        <MudSkeleton SkeletonType="SkeletonType.Rectangle"  Height="100px" />
    }else
    {
        <ComDashboardKPI Title="Pending Project" color="@MudBlazor.Color.Success" Icon="@Icons.Material.Filled.Layers" Value="@customer.pending_project.ToString()"/>
    }
</MudItem>
<MudItem xs="12" lg="4">
    
    @if (is_loading)
    {
        <MudSkeleton SkeletonType="SkeletonType.Rectangle"  Height="100px" />
    }else
    {
        <ComDashboardKPI Title="Current Balance" color="@MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.AttachMoney" Value="@customer.current_balance.ToString("C2")"/>
    }
</MudItem>

@code{
    [Parameter] public CustomerModel customer { get; set; }
    [Parameter] public bool is_loading { get; set; }
}
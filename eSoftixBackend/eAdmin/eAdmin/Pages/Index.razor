@page "/"
@page "/dashboard"
@page "/index"
@inherits Dashboard
<Loading is_loading="@(is_loading_data || is_loading_data)"/>
 @if (!is_loading_data && !is_loading_data)
{
    <PageContainer roles="dashboard_management">
    <PageHeader title="Dashboard"/>
    <PageBody>
        <ComDashboardKPIs />
    <MudGrid>
        <ComDashboardLineChart/>
        <ComDashboardPieChart/>

        <MudItem xs="12" sm="12" md="12">
            <ComCard>
                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Upcomming Expired">
                    <MudText>
                        <ComDashboardTableUpcomming/>
                    </MudText>
                </MudTabPanel>
                <MudTabPanel Text="Pending Project">
                    <ComDashboardTablePendingProject/>
                </MudTabPanel>
                <MudTabPanel Text="Recent Customer">
                    <MudText>
                        <ComDashboardTableRecentCustomer/>
                    </MudText>
                </MudTabPanel>
                <MudTabPanel Text="Recent Project">
                    <MudText>
                        <ComDashboardTableRecentProject/>
                    </MudText>
                </MudTabPanel>
            </MudTabs>
            </ComCard>
        </MudItem>


    </MudGrid>
    </PageBody>

</PageContainer>
}

@page "/"
@page "/dashboard"
@page "/index"
@inherits Dashboard
<Loading is_loading="@(is_loading_data || is_loading_data)"/>
 @if (!is_loading_data && !is_loading_data)
{
    <PageContainer roles="dashboard_management">
    <PageHeader title="Dashboard"/>
    <PageBody>
        <ComDashboardKPIs />
    <MudGrid>
        
        <MudItem xs="12" md="8" sm="12">

            <MudPaper Elevation="25" Class="pa-4" Style="height:600px;">
                <ComDashboardLineChart models="models"/>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4" sm="12">
            <MudPaper Elevation="25" Class="pa-4" Style="height:295px;margin-buttom:5px;">
                <ComDashboardProjectByProjectType models="@projects"/>
            </MudPaper>
            <MudPaper Elevation="25" Class="pa-4" Style="height:295px;margin-top:5px;">
                <ComDashboardCustomerByCustomerGroup models="@customers"/>
            </MudPaper>
        </MudItem>
        
        <MudItem xs="12" sm="12" md="12">
            <ComCard>
                <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                <MudTabPanel Text="Upcomming">
                    <MudText>Content One</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Pending Project">
                    <MudText>Content Two</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Recent Customer">
                    <MudText>Content Three</MudText>
                </MudTabPanel>
                <MudTabPanel Text="Recent Project">
                    <MudText>Content Three</MudText>
                </MudTabPanel>
            </MudTabs>
            </ComCard>
        </MudItem>


    </MudGrid>
    </PageBody>
    <PageFooter>
        <Left>
            <MudButton Variant="Variant.Filled">Default</MudButton>
        </Left>
        <Center>
             <MudButton Variant="Variant.Filled">Center </MudButton>
        </Center>
        <Right>
            <MudButton Variant="Variant.Filled">Right</MudButton>
        </Right>

    </PageFooter>
</PageContainer>
}
 


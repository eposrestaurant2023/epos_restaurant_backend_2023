        @if (!is_loading) { 
        <UICenter>
            <UIPanel Title="Customer Photo" IconName="@Icons.Outlined.Photo">
                
            </UIPanel>
            <UIPanel Title="Customer Contact" IconName="@Icons.Outlined.Person">
                <UIPanelHeaderRight>
                    <MudButton>New</MudButton>

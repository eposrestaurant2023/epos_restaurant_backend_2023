 <Loading is_loading="@(is_saving)"/>
 <EditForm Model="@model" OnValidSubmit="@Save_Click">
<Modal>
    <ModalContent>
             <DataAnnotationsValidator />
                <MudTextField T="string" @bind-Value="@model.station_name_en" Label="Station Name" For="@(() => model.station_name_en)" Required="true"/>
                <MudDatePicker Label="Expire Date" @bind-Date="@(model.expired_date)"  Disabled="@(model.id != Guid.Empty)"/>
                <SelectStationType @bind-selected_value="@(model.station_type)" variant="Variant.Text"/>
                <SelectCashDrawer businness_branch_id="@business_branch_id" @bind-selected_value="@(model.cash_drawer_id)" variant="Variant.Text" @bind-cash_drawer="@model.cash_drawer"/>
                <MudTextField T="string" @bind-Value="@(model.hardware_detail)" Label="Hardware detail" Lines="3"/>
                <MudTextField T="string" @bind-Value="@(model.note)" Label="Note" Lines="3"/>

    </ModalContent>
    <ActionButton>
        <SaveButton  is_loading="@is_saving" />
    </ActionButton>
</Modal>
</EditForm>


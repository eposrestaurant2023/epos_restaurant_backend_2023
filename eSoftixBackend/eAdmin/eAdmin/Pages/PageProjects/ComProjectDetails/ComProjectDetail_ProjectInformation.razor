 <UICenter>

                    <ComProjectDetail_AlertNextExpire model="@model"/>    
                    <ComProjectDetail_AlertExpired model="@model"/>    
                   
                    <MudAlert Severity="Severity.Info" Variant="Variant.Outlined"  Class="my-4"> 
                        <MudText Typo="Typo.subtitle2" Align="MudBlazor.Align.Center">Project ID</MudText>
                        <MudText Typo="Typo.h5" Align="MudBlazor.Align.Center">@model.id</MudText>
                    </MudAlert>    
                    
                    <MudGrid> 

                        <MudItem xs="6" lg="3">
                            <ComDashboardKPI Title="Branch" color="@MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.Home" Value="@model.total_business_branches.ToString()"/>
                        </MudItem>
                        <MudItem xs="6" lg="3">
                            <ComDashboardKPI Title="Warehouse" color="@MudBlazor.Color.Success" Icon="@Icons.Material.Filled.CropSquare" Value="@model.total_stock_location.ToString()"/>
                        </MudItem>
                        <MudItem xs="6" lg="3">
                            <ComDashboardKPI Title="Outlet" color="@MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.BusinessCenter" Value="@model.total_outlets.ToString()"/>
                        </MudItem>
                        <MudItem xs="6" lg="3">
                            <ComDashboardKPI Title="Station" color="@MudBlazor.Color.Info" Icon="@Icons.Material.Filled.DesktopWindows" Value="@model.total_stations.ToString()"/>
                        </MudItem>
                    </MudGrid>

                    <ComProjectDetail_CustomerInformation customer_id="@(model.customer_id.ToString())" project="model"/>

                    <UIPanel Title="Project Information">
                        <MudGrid>
                        <MudItem xs="12" md="12" lg="12">
                        <MudList>
                            <ListItem Title="Name Kh">
                                @model.project_code -
                                @model.project_name
                            </ListItem>
                                <ListItem Title="Project Type">@model.project_type.project_type_name</ListItem>
                                <ListItem Title="Start Date">@Convert.ToDateTime(model.start_date).ToString(gv.date_format)</ListItem>
                                <ListItem Title="Close Date">@Convert.ToDateTime(model.closed_date).ToString(gv.date_format)</ListItem>
                                <ListItem Title="Expired Date">@Convert.ToDateTime(model.expired_date).ToString(gv.date_format)</ListItem>
                        </MudList>
                        </MudItem>
                        <MudItem xs="12" md="12" lg="6">
                        <MudList>
                               
                            </MudList>
                        </MudItem>
                    </MudGrid>
                    </UIPanel>
                   <ComProjectDetail_ProjectFeature project_id="@(model.id.ToString())"/>

                   <Spacing/>
                    <MudText Typo="@Typo.body1">Opened by: @model.created_by on @model.created_date.ToString(gv.date_time_format)</MudText>
                    @if(model.is_closed){
                        <MudText Typo="@Typo.body1">Closed by: @model.closed_by on @(((DateTime)model.created_date).ToString(gv.date_format))</MudText>
                    }

                </UICenter>


@code {
    [CascadingParameter] public AppState gv { get; set; }
    [Parameter] public ProjectModel model { get; set; }
   
}

@if(is_visble){ 
    <MudAlert Severity="Severity.Error" Variant="Variant.Outlined"  Class="my-4">
        This project was expired on @expired_date (@(duration*-1) Day(s) ago)
    </MudAlert>    
}

@code {
    [Parameter] public ProjectModel model { get; set; }
    [CascadingParameter] public AppState gv { get; set; }

    
   
        public bool is_visble
        {
            get
            {

            return model.expired_date != null && duration <= 0 && model.is_expired;
            }

        } 
    
   
        public string expired_date
        {
            get
            {

                string text = "";
                if (model.expired_date != null)
                {
                    DateTime my_date = Convert.ToDateTime(model.expired_date);
                    text = my_date.ToString(gv.date_format);
                }
                return text;

            }

        } 
        
        public int duration
        {
            get
            { 
                if (model.expired_date != null)
                {
                    DateTime my_date = Convert.ToDateTime(model.expired_date);
                    return (int)(my_date - DateTime.Now).TotalDays ;
                }
            return 0;

            }

        }



}


<MudSelect T="int" Value="@PerPage" ValueChanged="@SelectChange" DisableUnderLine="true" Class="cus_select_pageer" Variant="Variant.Text" Direction="Direction.Top" Style="margin-top:0px;">
    <MudSelectItem Value="5">5</MudSelectItem>
    <MudSelectItem Value="10">10</MudSelectItem>
    <MudSelectItem Value="25">25</MudSelectItem>
    <MudSelectItem Value="50">50</MudSelectItem>
    <MudSelectItem Value="100">100</MudSelectItem>
</MudSelect>

@code{
    [Parameter]
    public int PerPage { get; set; } = 25;

    [Parameter]
    public EventCallback<int> OnChange { get; set; }

    async Task SelectChange(int n)
    {
        await OnChange.InvokeAsync(n);
    }
}

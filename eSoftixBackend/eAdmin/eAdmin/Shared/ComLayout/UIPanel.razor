@using System.ComponentModel.DataAnnotations
<MudPaper Class="@($"ui-panel-item {@Class}")" MinWidth="@MinWidth">
@if (!string.IsNullOrEmpty(Title))
    {
        <MudItem Class="d-flex pa-4">
        @if(UIPanelHeaderLeft is null)
        {
            <MudText Typo="Typo.h6" Class="d-flex align-center">
                @if (!string.IsNullOrEmpty(IconName)) { 
                <MudIcon Icon="@IconName" Class="mr-2"/>
                }@Title
            </MudText>
        }else{
            <MudItem>
                @UIPanelHeaderLeft
            </MudItem>
        }
        <MudSpacer/>
        @UIPanelHeaderRight
    </MudItem>
    <MudDivider/>
 }
    @if(UIPanelBody is not null || ChildContent is not null){
        <MudItem Class="@(ChildContent is not null?"pa-4 mx-auto":"pa-4")">
            @UIPanelBody
            @ChildContent
        </MudItem>
    }else{
        <MudItem Class="pa-4">
            @UIPanelBodyNoPadding
        </MudItem>
    }
   
    
</MudPaper>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string IconName { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string MinWidth { get; set; } = null;
    [Parameter] public RenderFragment UIPanelHeaderLeft { get; set; }
    [Parameter] public RenderFragment UIPanelHeaderRight { get; set; }
    [Parameter] public RenderFragment UIPanelBody { get; set; }
    [Parameter] public RenderFragment UIPanelBodyNoPadding { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}

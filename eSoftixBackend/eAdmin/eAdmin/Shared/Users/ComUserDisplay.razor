@if (state.current_login_user != null)
{
    <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Image="@(http.ImageUrl(state.current_login_user?.photo))" />
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body2">@state.current_login_user?.full_name</MudText>
                <MudText Typo="Typo.caption">@state.current_login_user?.role.role_name</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    </MudCard>
}
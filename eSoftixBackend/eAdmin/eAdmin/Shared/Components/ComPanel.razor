<Column ClassName="@($"uk-card uk-card-default db-panel {ClassName}")">
    <UkFlex>
        <UkFlex>
            <Column ClassName="dashboard-panel-title" is_visible="@(!string.IsNullOrEmpty(Title))">@Title</Column>
        </UkFlex>
        <UkFlex class_name="uk-margin-auto-left">
            @RigthContent
        </UkFlex>
    </UkFlex>
    @ChildContent
</Column>

@code {
    [Parameter] public bool is_visit { get; set; } = true;
    [Parameter] public string Title { get; set; }
    [Parameter] public string ClassName { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public RenderFragment RigthContent { get; set; }
}

 <MudDrawer @bind-Open="@IsOpen" Anchor="@Anchor.End" Elevation="1" Variant="@DrawerVariant.Temporary">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Advance Search</MudText>
    </MudDrawerHeader>
    @ChildContent
 
     <MudButton Variant="Variant.Filled" Color="Color.Primary"  ButtonType="ButtonType.Submit"  Size="Size.Large" FullWidth="true" Class="my-4" OnClick="OnSearch">Search</MudButton>
</MudDrawer>

                
                
                  
                
@code{
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback OnSearch { get; set; }
 
    [Parameter] public bool IsOpen { get; set; } = false;



}